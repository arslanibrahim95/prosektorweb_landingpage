# Server
PORT=3000
NODE_ENV=development

# CORS (production icin zorunlu; virgulle ayrilmis origin listesi)
# CORS_ORIGINS=https://example.com,https://www.example.com
CORS_ORIGINS=

# Supabase (Service Role key gereklidir; frontend'e asla vermeyin)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# DB schema apply (DDL) icin gerekli (Supabase -> Settings -> Database -> Connection string)
# Not: `db.<ref>.supabase.co` hostu bazi ortamlarda sadece IPv6 olabilir. IPv6 yoksa "pooler" connection string'i kullanin.
# Ornek (direct):
# DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres?sslmode=require
# Ornek (transaction pooler, genelde IPv4):
# DATABASE_URL=postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-0-REGION.pooler.supabase.com:6543/postgres?sslmode=require
DATABASE_URL=

# Oztek SMS API
OZTEK_USER_ID=
OZTEK_USERNAME=
OZTEK_PASSWORD=
OZTEK_ORIGIN=

# Bildirim alacak ekip numaralari (virgulle ayrilmis, 10 haneli GSM; ornek: 5551234567)
OZTEK_NOTIFY_TO=

# Opsiyonel
# OZTEK_SMS_TYPE=Turkce
# OZTEK_API_URL=http://www.ozteksms.com/panel/smsgonder1Npost.php
